<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_infor_remedio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.remediocertobetha.InforRemedio">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações do Remédio"
        android:id="@+id/informacao"
        android:textColor="#000000"
        android:width="500dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textAlignment="center" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade: "
        android:id="@+id/quantidadeR"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:width="200dp"
        android:layout_below="@+id/nomeR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Laboratório:"
        android:id="@+id/laboratorioR"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:width="200dp"
        android:layout_below="@+id/quantidadeR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Indicações:"
        android:id="@+id/indicacoesR"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:width="200dp"
        android:layout_below="@+id/laboratorioR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />




    <ImageView
        android:id="@+id/iv"
        android:layout_width="350dp"
        android:background="?attr/colorButtonNormal"
        android:layout_weight="0.58"
        android:layout_below="@+id/indicacoesR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_height="400dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:id="@+id/nomeR"
        android:textColor="#000000"
        android:width="500dp"
        android:textSize="20dp"
        android:layout_below="@+id/informacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />


</RelativeLayout>
</ScrollView>
