<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.mailson.remediocerto.CadastrarMedico"
        tools:ignore="ScrollViewSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite abaixo os dados para cadastro:"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:width="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nome*:"
            android:id="@+id/textNome"
            android:textColor="#000000"
            android:width="200dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nomeUsuario"
            android:layout_below="@+id/textNome"
            android:textSize="20dp"
            android:inputType="text"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Especialidade*:"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:width="200dp"
            android:layout_below="@+id/nomeUsuario"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/dataNascimento"
            android:layout_below="@+id/textView3"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CRM*:"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:width="200dp"
            android:layout_below="@+id/dataNascimento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/tipoSanguineo"
            android:layout_below="@+id/textView5"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:id="@+id/cadastrar"
            android:layout_below="@+id/tipoSanguineo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="CadastrarMedico"
            tools:ignore="HardcodedText" />


    </RelativeLayout>
</ScrollView>